<h1> eat burgers. <h1>

<img src="../public/assets/img/burger.png">

<ul>	<!-- for uneaten burgers-->
	{{#each burgers}}
		{{if !this.devoured}}
			<li>	
				{{this.id}}. {{this.burger_name}}
				<form action="/{{this.id}}?_method_PUT" method = "POST">
					<input type="hidden" name="devoured" value="true">
					<button type="submit">DEVOUR IT</button>
				</form>
			</li>
		{{/if}}

	{{/each}}

</ul> 

<ul> <!-- for eaten burgers-->
	{{#each burgers}}
		{{#if this.devoured}}
		<li>
			{{this.id}}. {{this.burger_name}}	
		</li>
		{{/if}}
	{{/each}}
</ul>

<h2> add a burger </h2>
	<form class="create-update-form" action="/" method="POST">
		<div class="form-group">
			<label for="burger"> Burger Name: </label>
			<input type="text" id="burger" name="name">
		</div>

		<button type="submit"> Add burger</button>
	</form>


